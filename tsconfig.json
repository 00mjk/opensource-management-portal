{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    // "strict": true,
    "outDir": "./dist",
    "incremental": true,
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2018",
    "lib": [
      "es2018"
    ],
    "types": [
      "mocha"
    ]
  },
  "exclude": [],
  "include": [
    "./*.ts",
    "./api/**/*",
    "./bin/**/*",
    "./business/**/*",
    "./config/**/*",
    "./data/**/*",
    "./entities/**/*",
    "./features/**/*",
    "./github/**/*",
    "./interfaces/**/*",
    "./jobs/**/*",
    "./lib/**/*",
    "./microsoft/**/*",
    "./middleware/**/*",
    "./routes/**/*",
    "./scripts/**/*",
    "./test/**/*",
    "./user/**/*",
    "./webhooks/**/*"
  ]
}